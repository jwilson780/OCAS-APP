<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="@drawable/custom_bg"
	android:clickable="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jack.ocas.OptionsActivity" >


	<Button
	    android:id="@+id/dummy_button"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:layout_centerHorizontal="true"
	    android:layout_marginBottom="28dp"
	    android:text="@string/dummy_button" />

	<Spinner
	    android:id="@+id/scale_array"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/fret_array"
	    android:layout_below="@+id/root_note_array"
	    android:layout_marginTop="32dp"
		android:text="Scale"/>

	<Spinner
	    android:id="@+id/fret_array"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/scale_array"
	    android:layout_centerHorizontal="true"
	    android:layout_marginTop="20dp"
		android:text="Number of Frets"/>

	<Spinner
	    android:id="@+id/octave_array"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/root_note_array"
	    android:layout_alignParentTop="true"
	    android:layout_marginTop="28dp"
		android:text="Octave"/>

	<Spinner
	    android:id="@+id/root_note_array"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/scale_array"
	    android:layout_below="@+id/octave_array"
	    android:layout_marginTop="20dp"
		android:text="Key"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:text="Octave"
		android:id="@+id/textView"
		android:layout_alignTop="@+id/octave_array"
		android:layout_alignStart="@+id/dummy_button" />

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:text="Key"
		android:id="@+id/textView2"
		android:layout_alignTop="@+id/root_note_array"
		android:layout_alignStart="@+id/textView" />

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:text="Scale"
		android:id="@+id/textView3"
		android:layout_alignTop="@+id/scale_array"
		android:layout_alignStart="@+id/textView2" />

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:text="Frets"
		android:id="@+id/textView4"
		android:layout_alignTop="@+id/fret_array"
		android:layout_alignStart="@+id/textView3" />


</RelativeLayout>
